@model J_LearingSystem.Models.Topic

@{
    ViewBag.Title = "Topic Details";
}

<div class="row top-toolbar">
    <div class="col-sm-6">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-sm-6 text-right">
        <div class="btn-group">
            <a href="@Url.Action("Index", "Topic")" class="btn btn-default">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>
        </div>
        <div class="btn-group">
            <a href="@Url.Action("Edit", "Topic", new { id = Model.Id })" class="btn btn-warning">
                <span class="glyphicon glyphicon-edit"></span>
            </a>
            <a href="@Url.Action("Delete", "Topic", new { id = Model.Id })" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span>
            </a>
        </div>
    </div>
</div>

<hr />
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Model.Title
        </dd>

    </dl>
</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>

        <dd>
            @Model.Time.ToShortDateString()
        </dd>

    </dl>
</div>
<div class="row top-toolbar">
    <div class="col-sm-6">
        <h4>Replies</h4>
    </div>
    <div class="col-sm-6 text-right">
        <div class="btn-group">
            <a href="@Url.Action("Create", "Reply", new { topicId = Model.Id })" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Create Reply
            </a>
        </div>
    </div>
</div>
@{
    Html.RenderPartial("~/Views/Question/_PartialQuestionsList.cshtml", Model.Replies);
}


