@model IEnumerable<J_LearingSystem.Models.Topic>

<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Time
        </th>
        <th>
            Created By
        </th>
        <th>
            Course
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Title
        </td>
        <td>
            @item.Time.ToShortDateString()
        </td>
        <td>
            @item.Person.Name
        </td>
        <td>
            @item.Course.Name
        </td>
        <td>
            @Html.ActionLink("View", "Details", "Topic", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })

@if (User.Identity.Name.Equals(item.Person.UserName)) {
            <div class="btn-group btn-group-sm">
                <a href="@Url.Action("Edit", "Topic", new { id = item.Id })" class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                <a href="@Url.Action("Delete", "Topic", new { id = item.Id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </div> 
}
        </td>
    </tr>
}
</table>
