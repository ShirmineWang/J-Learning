@model IEnumerable<J_LearingSystem.Models.Schedule>

@{
    ViewBag.Title = "Schedules";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Schedule", "Create")
</p>
<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StartTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StopTime)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.StartTime.ToShortDateString()
        </td>
        <td>
            @item.StopTime.ToShortDateString()
        </td>
        <td>
            @Html.ActionLink("View", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })
            <div class="btn-group btn-group-sm">
                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </div>          
        </td>
    </tr>
}

</table>
