@model IEnumerable<J_LearingSystem.Models.Course>

<table class="table table-striped table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Instructor
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Number
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Staff.Name
        </td>
        <td>
            @Html.ActionLink("View", "Details", "Course", new { id = item.Id }, new { @class = "btn btn-sm btn-default" })
            <div class="btn-group btn-group-sm">
                <a href="@Url.Action("Edit", "Course", new { id = item.Id })" class="btn btn-warning">
                    <span class="glyphicon glyphicon-edit"></span>
                </a>
                <a href="@Url.Action("Delete", "Course", new { id = item.Id })" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
            </div>          
        </td>
    </tr>
}

</table>
